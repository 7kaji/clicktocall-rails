source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.4'

gem 'haml'
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Validate phone numbers easily
gem 'phony_rails'
# Twilio REST API. 
gem 'twilio-ruby'

group :development, :test do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end